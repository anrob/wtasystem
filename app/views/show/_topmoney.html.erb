<div class="ui grid">
    <div class="twelve wide stackable column">
        <div class="ui segment">
            <div class="ui top attached red label"> <%= contract.act_booked %></div>
                <div class="ui ribbon black label"><%= contract.type_of_event %></div>
<br><br>
<div class="ui vertically divided stackable grid">
<div class="two column row">
<div class="column">
<div class="ui fluid form segment">
<%= render 'show/contractinfo',contract: @contract %>
</div></div>
<div class="column">
<div class="ui fluid form segment">
<%= render  'show/address',contract: @contract %>
</div></div>
</div><!-- end of two column row-->
</div><!-- end vertically divided stackable-->
<%= render 'show/agent', contract: @contract %>

<hr>



<div class="ui vertically divided stackable grid">

        <div class="two column row">
            <div class="column">
                <div class="ui fluid form segment">
                    <div class="ui top attached black label">Client Section
                    </div><br>
                    Client Info: <%= contract.first_name %> <%= contract.last_name %><br>
                    <%= content_tag(:div, "Company:                    #{contract.company}") unless contract.company.blank? %>
                    Email Address: <%= contract.email_address %><br>
                    Bride / Bat Mitzvah Name: <%= contract.brides_names %><br>
                    Grooms / Bar Mitzvah Name:  <%= contract.grooms_name %><br>
                    Home Phone: <%= contract.home_phone %><br>
                    Work Phone: <%= contract.work_phone %><br>
                    Cell Phone: <%= contract.cell_phone %>
            </div></div>
            <div class="column">
                <div class="ui fluid form segment">
                    <div class="ui top attached black label">Extras Section
                    </div><br>
                <%= content_tag (:div), :class => "dl-horizontal" do %>
                <%= content_tag(:div, "Early setup Time #{contract.early_setup_time}") unless contract.early_setup_time.blank? %>
                <%= content_tag(:div, "Giveaways: #{contract.giveaways}")  unless contract.giveaways.blank? %>
                <%= content_tag(:div, "Type of Light Show:         #{contract.type_of_light_show}") unless contract.type_of_light_show.blank? %>
                <%= content_tag(:div, "Number of Horns:            #{contract.number_of_horns}") unless contract.number_of_horns.blank? || 0 %>
                <%= content_tag(:div, "Number of Dancers:          #{contract.number_of_dancers}") unless contract.number_of_dancers.blank? || 0 %>
                <%= content_tag(:div, "Pick up Reason              #{contract.explanation_opf_pickup_adjustment}") unless contract.explanation_opf_pickup_adjustment.blank? %>
                <%= content_tag(:div, "Cap Music:                  #{contract.capital_music_player}") unless contract.capital_music_player.blank? %>
                <%= content_tag(:div, "Quest. Received: #{contract.questionnaire_received_date}") unless contract.questionnaire_received_date.blank? %>
                <%= content_tag(:div, "Referral Fee to :           #{contract.referral_fee_to}") unless contract.referral_fee_to.blank? %>
                <%= content_tag(:div, "Song Requests:              #{contract.song_requests}") unless contract.song_requests.blank? %>
                <%= content_tag(:div, "Cocktail Instrumentation:   #{contract.cocktail_instrumentation}") unless contract.cocktail_instrumentation.blank? %>
                <%= content_tag(:div, "Cocktail Time:              #{contract.cocktail_time}") unless contract.cocktail_time.blank? %>

                <% end %>
      </div></div>


        </div> <!-- end two column row -->

</div> <!-- end verit div stack grid-->
<br>
<div class="ui vertically divided stackable grid">
        <div class="two column row">
<div class="column"> <%= render  "show/weddingstuff", contract: @contract %></div>
<div class="column"><%= render  "show/players", contract: @contract %></div>
</div>
</div>
 <%= render  "show/provision", contract: @contract %>
 <%= render  "show/actnotes", contract: @contract %>
<%= render  "show/addservices", contract: @contract %>
    </div>
</div>


<div class="four wide stackable column">
<% if can? :see_money, @contracts %>
<%= render  "show/moneysection", contract: @contract %>
<% end %>
<%= render  "show/buttons", contract: @contract %>
</div>











