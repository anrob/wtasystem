<li class="<%= isincluded %>">dj tech_charge:               <%= number_to_currency(contract.dj_tech_charge) %></li>
<li class="<%= isincluded %>">non-commissionable charges: <%= number_to_currency(contract.non_commissionable_charges) %></li>
<li class="<%= isincluded %>">capital music pay:            <%= number_to_currency(contract.capital_music_pay) %></li>
<li class="<%= isincluded %>">base price_of act:            <%= number_to_currency(contract.base_price_of_act) %></li>
<li class="<%= isincluded %>">referral fee amount:      <%= number_to_currency(contract.referral_fee_amount) %></li>
<li class="<%= isincluded %>">tax amount:               <%= number_to_currency(contract.tax_amount) %></li>
</div>
<% end %>
