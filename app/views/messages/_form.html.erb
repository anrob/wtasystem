<%= form_for(@message, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.control_group :title do |f| %>
      <%= f.label :title, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, class: 'span5' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.control_group :body do |f| %>
      <%= f.label :body, class: 'control-label' %>
      <div class="controls">
        <%= f.text_area :body, class: 'span5' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", messages_path, class: 'btn' %>
  </div>
<% end %>
