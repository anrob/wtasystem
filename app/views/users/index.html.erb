<table cellpadding="0" cellspacing="0" class="sTable" width="100%">
		<thead class="sTableHead">
  <tr>
    <th class="head0">Email Address</th>
    <th class="head0">Edit</th>

 <% if current_user.is? :everything? %>  
    <th class="head0">Delete</th>
<% end %>
  </tr>
	</thead>
<% @users.each do |u| %>
 <tr>
	<td><%= link_to u.email, edit_user_path(u) %> </td>
	<td><%= link_to 'Edit', edit_user_path(u) %></td>
<% if current_user.is? :everything? %>
	<td><%= link_to 'Destroy', u, :confirm => 'Are you sure?', :method => :delete %></td>
<% end %>

	</tr>
	<% end %>
	
	</table>

	<br />

	<%= button_to 'New User', new_user_path, :class => 'button button_blue',:method => :get %>
	
	<%= will_paginate @users %>

	