
<div class="page-header">
<h1><%#= @actcode.description %> Contracts in the Next 10 Days</h1>
</div>
<div class="sheet sheet-condensed">
  <div class="sheet-inner">
<table class="table">
    <thead>
     <tr>
                    <th>Date of Event</th>
                    <th>Contract #</th>
                    <th>Client Name</th>
                    <th>Hours of coverage</th>


                    <th>Event Type</th>
                    <th>Location</th>

                    <th> </th>
                  </tr>
                </thead>
<tbody>
    <% @contract.tenday.each do |contract| %>
    <tr>
        <td><% unless contract.confirmation == 1  %>
            <%= link_to contract.date_of_event,  contract, class: "red" %>
            <% else %>
            <%= link_to contract.date_of_event,  contract, class: "green" %>
            <% end %>
    </td>
            <td><%= link_to contract.contract_number, contract %>
           <td><%= link_to "#{contract.first_name} #{contract.last_name}", contract %></td>
           <td><%= link_to "#{contract.event_start_time} - #{contract.event_end_time}", contract %></td>


           <td><%= link_to contract.type_of_event, contract %></td>
           <td><%= link_to truncate(contract.location_name, length: 40, omission: "..."), contract %></td>

           <td>
            <% if contract.confirmation == 1  %>
            <%= button_to 'Get Info', contract, class: 'btn-success',method: :get %>
            <% else %>
            <%#= button_to 'Confirm', contract, class: 'btn-danger',method: :get %>
            <%= button_to 'CONFIRM', confirmjob_path(id: contract.id), class: 'btn-danger' %>
            <% end %>
            <%#= link_to 'Get Info', contract, class: 'button blue' %>

            </td>

<%#= render @contract.tenday %>
</tr>
<% end %>
</tbody>
</table>
</div></div>
<br>
<% if current_user.is? :manager %>
<div class="page-header">
<h1><span>All Management Team contracts in the Next 10 Days</span></h1>
</div>
<%= render 'frontjobs' %>
<% end %>

<% content_for :frontpage do  %>

<% if user_signed_in? %>
<%= switch_user_select if current_user.is? :everything %>
<% end %>
 <ul class="nav nav-tabs nav-stacked nav-caret-left">
<% if user_signed_in? %>
    <%= render 'otheracts-sidebar' if current_user.is? :manager %>
<% end %>

<% end %>


